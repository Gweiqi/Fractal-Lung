\def\legendline#1#2#3{\protect\tikz[baseline]{\protect\draw[line width=#2,#1](0em,.5ex) -- (#3,.5ex);}}
\def\legendbar#1{\protect\tikz[baseline]{\protect\draw (0em,0ex) -- (1em,0ex);
  \protect\filldraw [fill=#1] (.2em,0ex) rectangle (.8em,1.2ex);}}
\def\legendcircle#1#2{\protect\tikz[baseline]{\protect\filldraw [#2] (0em,.5ex) circle (#1);}}
\def\legendsquare#1#2{\protect\tikz[baseline]{\protect\filldraw [#2] (0em,.5ex) +(-#1,-#1) rectangle +(#1,#1);}}

