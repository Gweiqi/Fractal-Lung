% Nomenclature -----------------------------------
\newenvironment{nomenclature}[1][Nomenclature]%
{ \markboth{\uppercase{#1}}{\uppercase{#1}}         % heading
  \chapter*{#1}
  \addcontentsline{toc}{chapter}{#1}
  \addtolength{\extrarowheight}{2pt}}
{ \addtolength{\extrarowheight}{-2pt}}

\newenvironment{nomenclaturesection}[1]%            % nomenclature with two columns
{ \begin{longtable}{@{}p{30mm} >{\raggedright\arraybackslash}p{130mm}@{}}
  \multicolumn{2}{@{}l}{\textsf{\textbf{#1}}} \\[1ex]
  \endfirsthead}
{ \end{longtable}}

\newenvironment{nomenclaturesection*}[1]%           % nomenclature with three columns
{ \begin{longtable}{@{}p{30mm} >{\raggedright\arraybackslash}p{110mm} p{20mm}@{}}
